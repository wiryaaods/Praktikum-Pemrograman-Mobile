<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pilih bangun ruang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/jarijari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jari-jari"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jenis"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />

        <EditText
            android:id="@+id/jarijari2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/jarijari"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/panjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panjang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jarijari2"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />

        <EditText
            android:id="@+id/panjang2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/panjang"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/lebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lebar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/panjang2"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />

        <EditText
            android:id="@+id/lebar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/lebar"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lebar2"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />

        <EditText
            android:id="@+id/tinggi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/tinggi"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/hitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tinggi2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:text="HITUNG"
            android:onClick="onClick"
            />

        <TextView
            android:id="@+id/hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hitung"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/jenis"
            app:layout_constraintTop_toTopOf="@id/jenis"
            android:spinnerMode="dropdown"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>