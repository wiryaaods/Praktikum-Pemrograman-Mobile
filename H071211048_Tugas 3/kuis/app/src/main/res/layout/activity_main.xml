<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/httyd3">

    <TextView
        android:id="@+id/kuis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/viga"
        android:paddingHorizontal="10dp"
        android:text="How to Train Your Dragon Quiz"
        android:textAlignment="center"
        android:textColor="#A63F3F"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        app:cardBackgroundColor="#8AE48775"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/profilLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/baseline_camera_alt_24"
                app:civ_border_width="5dp"></de.hdodenhof.circleimageview.CircleImageView>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:hint="enter ur name"
                android:fontFamily="@font/viga"
                android:paddingStart="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:visibility="gone"
                android:fontFamily="@font/viga"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:visibility="gone"
                android:fontFamily="@font/viga"/>

            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F3C5C5"
                android:onClick="apply"
                android:text="Apply"
                android:textColor="@color/black"
                android:fontFamily="@font/viga"/>

            <Button
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#D8D8D8"
                android:onClick="play"
                android:text="Play"
                android:textColor="@color/black"
                android:fontFamily="@font/viga"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>